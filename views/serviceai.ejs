<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Juancafe AI Chatbot</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background-color: #C5A888;
        }
        .chat-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white
        }
        .chat-container h2 {
            margin-bottom: 20px;
            font-size: 20px;
            text-align: center;
            background-color: #2B1A08;
            color: white;
        }
        .input-group{
            border: #2B1A08;
        }
        .btn-primary{
            background-color: #2B1A08;
            border: #2B1A08;
        }
        .chat-box {
            height: 300px;
            overflow-y: scroll;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            
        }
        .user-message, .bot-message {
            margin: 5px 0;
        }
        .user-message {
            text-align: right;
        }
        .bot-message {
            text-align: left;
        }
        .input-group {
            margin-bottom: 20px;
        }
        .logo {
            text-align: center;
            padding: 5px;
            margin-top: 1px;
            color: #2B1A08;
            font-size: 2em;
            background-color: #F4F1E8;
            width: 100%; /* Make it take full width */
            margin-bottom: 20px; /* Add space below */
        }
    </style>
</head>
<body>
<div class="logo"><img src="jc2.png" height="50" alt=""></div>
<div class="container">
    <div class="chat-container">
        <h2>Customer Service</h2>
        <div class="chat-box" id="chat-box"></div>
        <div class="input-group">
            <input type="text" id="user-input" class="form-control" placeholder="Type here...">
            <button id="submit-btn" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById("submit-btn").addEventListener("click", sendUserMessage);

    document.getElementById("user-input").addEventListener("keyup", function(event) {
        if (event.keyCode === 13) {  
            event.preventDefault();
            sendUserMessage();
        }
    });

    function sendUserMessage() {
        var userInput = document.getElementById("user-input").value.trim(); 
        var chatBox = document.getElementById("chat-box");

        if (userInput === "") {
            alert("Error: Empty input is not allowed.");
            return; // Exit function if input is empty
        }

        var userMessage = "<p class='user-message'><strong>You:</strong> " + userInput + "</p>";
        chatBox.innerHTML += userMessage;

        // Check if user input contains keywords
        if (userInput.toLowerCase().includes("password")) {
            var botResponse = "<p class='bot-message'><strong>Bot:</strong> It seems like you're asking about passwords. To reset your password, please visit our website and click on the 'Forgot Password' link. Follow the instructions there to reset your password.</p>";
        } else if (userInput.toLowerCase().includes("how")) {
            var botResponse = "<p class='bot-message'><strong>Bot:</strong> I'm here to assist you. What specific information do you need?</p>";
        } else {
            switch(userInput.toLowerCase()) {
                case "hi":
                case "hello":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> Hi there!</p>";
                    break;
                case "how are you?":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> I'm just a bot, but I'm functioning well. How about you?</p>";
                    break;
                case "i'm having a problem":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> How can I help you?</p>";
                    break;
                case "help":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> Tell me your problem</p>";
                    break;
                case "how do i reset my password?":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong>  To reset your password, please visit our website and click on the 'Forgot Password' link. Follow the instructions there to reset your password.</p>";
                    break;     
                case "i'm having trouble logging into my account.":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> If you're having trouble logging into your account, please double-check that you're entering the correct username and password. If you're still having issues, you can reset your password using the 'Forgot Password' link on our website.</p>";
                    break;     
                case "trouble":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> If you're having trouble logging into your account, please double-check that you're entering the correct username and password. If you're still having issues, you can reset your password using the 'Forgot Password' link on our website.</p>";
                break;         
                case "how can i contact customer support?":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> You can check the 'About us' page of our website. Our team is available to assist you during business hours.</p>";
                    break;  
                case "contact":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> You can check the 'About us' page of our website. Our team is available to assist you during business hours.</p>";
                break;
                case "Who developed this system":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong>Thiena Damasco, Cael Cuasay, Charlyn Cuasay, Princess Maan Arellano </p>";
                    break;    
                case "developer":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong>Thiena Damasco, Cael Cuasay, Charlyn Cuasay, Princess Maan Arellano </p>";
                break;            
                case "bye":
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> Goodbye!</p>";
                    break;
                default: 
                    var botResponse = "<p class='bot-message'><strong>Bot:</strong> I'm sorry, I didn't understand that.</p>";
            }
        }

        setTimeout(function() {
            chatBox.innerHTML += botResponse;
            document.getElementById("user-input").value = "";
            chatBox.scrollTop = chatBox.scrollHeight;
        }, 500);
    }
</script>
</body>
</html>