                                <h5 class="card-title"><%= info.prodname %></h5>
                                <p class="card-text"><%= info.price %></p>
                                <p class="card-text"><%= info.quantity %></p>
                                <button class="add-to-cart-btn">Add to Cart</button>
                                <button class="buy-btn">Buy</button>
                                </div>
                            </div>
                            </div><!--end-->
                        <% }) %>
