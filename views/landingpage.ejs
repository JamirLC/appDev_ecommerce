            </form>
                <!----------------------Post-------------------------->
                    <div class="container mt-4">
                       
                        <div class="row">
                          <% information.forEach(info => { %>
                            <div class="col-md-3 mt-3">
                            <div class="card">
                                <img src="<%= info.filepath %>" class="card-img-top" alt="...">
