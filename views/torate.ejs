<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ratings</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #C5A888;
        }

        .container {
            padding-top: 50px;
        }

        .rating-section {
            background-color: #ffffff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .rating-title {
            font-weight: bold;
            margin-bottom: 20px;
        }

        .rating-stars {
            font-size: 24px;
            color: #f1c40f;
            cursor: pointer;
        }

        .buyer-rating {
            font-size: 18px;
            font-weight: bold;
            color: #007bff;
        }
        .logo {
            text-align: center;
            padding: 5px;
            margin-top: 1px;
            color: #2B1A08;
            font-size: 2em;
            background-color: #F4F1E8;
            width: 100%; /* Make it take full width */
            margin-bottom: 20px; /* Add space below */
        }
    </style>
</head>
<body>
<div class="logo"><img src="jc2.png" height="50" alt=""></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <!-- Rating Section -->
                <div class="rating-section">
                    <h2 class="rating-title">Rate Product</h2>
                    <form id="rating-form">
                    <div class="mb-3">
                        <label for="product-name" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="product-name" placeholder="Enter product name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Rating</label><br>
                        <div class="rating-stars" id="product-rating">
                            <i class="far fa-star" data-star="1"></i>
                            <i class="far fa-star" data-star="2"></i>
                            <i class="far fa-star" data-star="3"></i>
                            <i class="far fa-star" data-star="4"></i>
                            <i class="far fa-star" data-star="5"></i>
                        </div>
                    </div>
                    <!-- Add comment section -->
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" id="comment" rows="3" placeholder="Enter your comment"></textarea>
                    </div>
                    <!-- End of comment section -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                </div>
            </div>
        </div>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Function to handle star ratings
        $('.rating-stars').on('click', 'i', function() {
            const starValue = $(this).data('star');
            const starParent = $(this).parent();
            starParent.attr('data-stars', starValue);
            starParent.find('i').removeClass('fas').addClass('far');
            $(this).prevAll('i').andSelf().removeClass('far').addClass('fas');
        });

        // Function to handle form submission
        $('#rating-form').on('submit', function(e) {
            e.preventDefault();
            const productName = $('#product-name').val();
            const productRating = $('#product-rating').data('stars');
            const productQuality = $('#product-quality').data('stars');
            const sellerService = $('#seller-service').data('stars');
            const deliverySpeed = $('#delivery-speed').data('stars');

            // Submit ratings via AJAX or perform other actions
            console.log('Product Name:', productName);
            console.log('Product Rating:', productRating);
            console.log('Product Quality:', productQuality);
            console.log('Seller Service:', sellerService);
            console.log('Delivery Speed:', deliverySpeed);
        });
    </script>
</body>
</html>