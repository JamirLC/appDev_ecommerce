<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bootstrap Table</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
</head>
<body class="bg-light">
    <div class="container-fluid m-0 p-0">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-dark text-light position-fixed vh-100 p-3">
                <div class="header-box px-1 pt-3 pb-4 d-flex align-items-center justify-content-between">
                    <h1 class="fs-4"><span>Admin</span></h1>
                    <hr class="text-light">
                </div>
                <nav class="sidebar py-2">
                    <ul class="nav flex-column list-unstyled">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/index">
                                <i class="bi bi-person"></i> Products
                            </a>
                        </li>
                        <% if (user && user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/users">
                                    <i class="bi bi-person"></i> Users
                                </a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/logout">
                                <i class="bi bi-box-arrow-right"></i> Log Out
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 p-0">

                <div class="container-fluid mt-3">
                    <h1 class="mb-4">Products</h1>

                    <% if (user && user.role === 'admin') { %>
                        <!-- Create Product Link -->
                        <a href="/add" class="btn btn-primary mb-3">Add Product</a>
                    <% } %>

                    <!-- Display Feedback Message -->
                    <% if (message) { %>
                        <div class="alert alert-info" role="alert">
                            <%= message %>
                        </div>
                    <% } %>

                    <div class="container-fluid mb-3">
                        <button class="btn d-md-none d-block open-btn px-1 py-0">
                            <i class="bi bi-list text-dark fs-1"></i>
                        </button>
                        <!-- Search Form in the navbar -->
                        <form class="d-flex ms-auto" action="/search" method="GET">
                            <input class="form-control me-2" type="search" name="query" placeholder="Search products" aria-label="Search" required />
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>

                    <!-- Table for product information -->
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <% if (user && user.role === 'admin') { %>
                                    <th>Action</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% information.forEach(info => { %>
                                <tr>
                                    <td><%= info.prodname %></td>
                                    <td><%= info.description %></td>
                                    <td><%= info.price %></td>
                                    <td><%= info.quantity %></td>
                                    <% if (user && user.role === 'admin') { %>
                                        <td>
                                            <a href="/update/<%= info.prodID %>" class="btn btn-warning">Update</a>
                                            <a href="/delete/<%= info.prodID %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <!-- Pagination Controls -->
                    <% if (totalPages > 1) { %>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <% for(let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <% if (searchTerm) { %>
                                            <a class="page-link" href="/search?query=<%= encodeURIComponent(searchTerm) %>&page=<%= i %>"><%= i %></a>
                                        <% } else { %>
                                            <a class="page-link" href="/index?page=<%= i %>"><%= i %></a>
                                        <% } %>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
