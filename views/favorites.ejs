<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorite Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background-color: #C5A888;
        }
        h1{
            color: white;
        }
/*header*/
        .logo {
            text-align: center;
            padding: 15px;
            color: #2B1A08;
            font-size: 2em;
            background-color: #F4F1E8;
            width: 100%; 
            margin-bottom: 20px; 
        }

        /* Add your custom styles here */
        .product-item {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            height: 100%;
            width: 400px; /* Adjust width */
            margin-bottom: 10px; /* Add space between cards */
        }

        .product-image {
            width: 100%;
            height: 350px; /* Adjust height */
            object-fit: cover;
            border-radius: 5px;
        }

        .product-name {
            font-weight: bold;
            margin-top: 10px;
            color: #333;
        }

        .product-price {
            color: #666;
        }

        .remove-favorite-btn {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
            margin-top: 10px;
        }

        .remove-favorite-btn:hover {
            background-color: #c82333;
        }
        .btn-danger{
            background-color: #2B1A08;
            border: #2B1A08;
        }
    </style>
</head>
<body>
<div class="logo"><img src="jc2.png" height="50" alt=""></div>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Favorite Products</h1>

        <!-- Container for favorite products -->
        <div id="favorite-products" class="row">
            <!-- Favorite products will be dynamically added here -->
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sample favorite product data (replace with your actual data)
        const favoriteProducts = [
            { id: 1, name: 'Darkchoco MilkTea', price: '₱58.00', imageUrl: 'darkchoco.png' },
            { id: 2, name: 'Bukopandan MilkTea', price: '₱58.00', imageUrl: 'bukopandan.png' },
            { id: 3, name: 'Cookies and Cream MilkTea', price: '₱58.00', imageUrl: 'cookiesncream.png' },
            { id: 4, name: 'Blackforest MilkTea', price: '₱58.00', imageUrl: 'blackforest.png' },
            { id: 5, name: 'Choco Mouse MilkTea', price: '₱58.00', imageUrl: 'chocomouse.png' },
            { id: 6, name: 'Redvelvet MilkTea', price: '₱58.00', imageUrl: 'redvelvet.png' }
        ];

        // Function to render favorite products
        function renderFavoriteProducts() {
            const favoriteProductsContainer = document.getElementById('favorite-products');

            // Clear existing content
            favoriteProductsContainer.innerHTML = '';

            // Render each favorite product
            favoriteProducts.forEach(product => {
                const productItem = document.createElement('div');
                productItem.classList.add('col-md-4', 'mb-4');

                // Product item card
                const card = document.createElement('div');
                card.classList.add('card', 'product-item');

                // Product image
                const productImage = document.createElement('img');
                productImage.classList.add('card-img-top', 'product-image');
                productImage.src = product.imageUrl; // Customize image URL here
                card.appendChild(productImage);

                // Card body
                const cardBody = document.createElement('div');
                cardBody.classList.add('card-body');

                // Product name
                const productName = document.createElement('h5');
                productName.classList.add('card-title', 'product-name');
                productName.textContent = product.name;
                cardBody.appendChild(productName);

                // Product price
                const productPrice = document.createElement('p');
                productPrice.classList.add('card-text', 'product-price');
                productPrice.textContent = product.price;
                cardBody.appendChild(productPrice);

                // Remove favorite button
                const removeFavoriteBtn = document.createElement('button');
                removeFavoriteBtn.classList.add('btn', 'btn-danger', 'remove-favorite-btn');
                removeFavoriteBtn.textContent = 'Remove Favorite';
                removeFavoriteBtn.addEventListener('click', () => removeFavorite(product.id));
                cardBody.appendChild(removeFavoriteBtn);

                // Append card body to card
                card.appendChild(cardBody);

                // Append card to product item
                productItem.appendChild(card);

                // Append product item to container
                favoriteProductsContainer.appendChild(productItem);
            });
        }

        // Function to remove a product from favorites
        function removeFavorite(productId) {
            // Implement remove functionality here
            // For now, let's assume we remove the product from the list
            const index = favoriteProducts.findIndex(product => product.id === productId);
            if (index !== -1) {
                favoriteProducts.splice(index, 1);
                renderFavoriteProducts();
            }
        }

        // Initial rendering
        renderFavoriteProducts();
    </script>
</body>
</html>