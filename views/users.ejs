<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bootstrap Table</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container-fluid m-0 p-0">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-dark text-light position-fixed vh-100 p-3">
          <div class="header-box px-1 pt-3 pb-4 d-flex align-items-center justify-content-between">
            <h1 class="fs-4"><span>Admin</span></h1>
            <hr class="text-light">
          </div>
          <nav class="sidebar py-2">
            <ul class="nav flex-column list-unstyled">
              <li class="nav-item">
                <a class="nav-link text-light" href="/">
                  <i class="bi bi-person"></i> Products
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/users">
                  <i class="bi bi-person"></i> Users
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="#">
                  <i class="bi bi-box-arrow-right"></i> Log Out
                </a>
              </li>
            </ul>
          </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 p-0">
          <nav class="navbar navbar-expand-lg navbar-light bg-light m-0">
            <div class="container-fluid">
              <button class="btn d-md-none d-block open-btn px-1 py-0">
                <i class="bi bi-list text-dark fs-1"></i>
              </button>
              <a class="navbar-brand" href="#"></a>
            </div>
          </nav>

          <div class="container-fluid mt-3">
            <h1 class="mb-4">Users</h1>

            <!-- Table for user information -->
            <table class="table table-bordered table-striped">
              <thead class="table-dark">
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>Age</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <% information.forEach(info => { %>
                <tr>
                  <td><%= info.fname %></td>
                  <td><%= info.lname %></td>
                  <td><%= info.email %></td>
                  <td><%= info.address %></td>
                  <td><%= info.age %></td>
                  <td><%= info.role %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
