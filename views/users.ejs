<%- include('partials/sidebar') %>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 p-0">
          <nav class="navbar navbar-expand-lg navbar-light bg-light m-0">
            <div class="container-fluid">
              <button class="btn d-md-none d-block open-btn px-1 py-0">
                <i class="bi bi-list text-dark fs-1"></i>
              </button>
              <a class="navbar-brand" href="#"></a>
            </div>
          </nav>

          <div class="container-fluid mt-3">
            <h1 class="mb-4">Users</h1>

             <!-- Display Feedback Message -->
                    <% if (message) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                    <% } %>

            <div class="container-fluid mb-3">
                <button class="btn d-md-none d-block open-btn px-1 py-0">
                    <i class="bi bi-list text-dark fs-1"></i>
                </button>
                <form class="d-flex ms-auto" action="/search2" method="GET">
                    <input class="form-control me-2" type="search" name="query" placeholder="Search products" aria-label="Search" required />
                              <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>

            <!-- Table for user information -->
            <table class="table table-bordered table-striped">
              <thead class="table-dark">
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Password</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <% information.forEach(info => { %>
                <tr>
                  <td><%= info.fname %></td>
                  <td><%= info.lname %></td>
                  <td><%= info.email %></td>
                  <td>********</td>
                  <td><%= info.role %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
